/*
 * 
 *Description: This program is a beginners program, it will attempt to add
 * several variables together. It will also utilize a loop execution with increments
 * of 2.
 */
public class PlayOnNumbers {
  public static void main (String[] args) {
    int a,b,c,sum;
    a=1;
    b=23;
    c=90;
    sum=a+b+c;
    double j,jojo;
    j=.1;
    jojo=a+b+c+sum+j;
    System.out.println();
    System.out.println("a is "+a+" & b is "+b+" & c is "+c);
    System.out.println();
    System.out.println("sum is "+sum);
    System.out.println();
    System.out.println("jojo is "+jojo);
    System.out.println();
    int number,square;
    for(number=0;number<=20;number=number+2){
      square=number*number;
    System.out.println("number is "+number+" and its square is "+square);}
  }}